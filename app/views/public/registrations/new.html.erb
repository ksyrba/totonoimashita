<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="sign_up col-4">
      <div class="title">
        <h3>新規登録</h3>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="form-group col-8">
          <%= f.label :"名前（ニックネーム）" %><br>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group col-6">
          <%= f.label :"性別" %><br>
          <%= f.radio_button :sex, "man" %>男 <%= f.radio_button :sex, "woman" %>女
        </div>
        <div class="form-group col-6">
          <%= f.label :"生年月日" %><br>
          <%= f.date_field :birthdate, class: 'form-control' %>
        </div>
       <div class="form-group col-5">
          <%= f.label :"居住地" %><br>
          <%= f.collection_select(:area_id, Area.all, :id, :name, {}, {class:'area-select form-control'}) %>
        </div>
        <div class="form-group col-12">
          <%= f.label :"メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>
        <div class="form-group col-12">
          <%= f.label :"パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        </div>
        <div class="form-group col-12">
          <%= f.label :"パスワード（確認用）" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>
        <div class="actions mb-3">
          <%= f.submit "新規登録",class: 'btn btn-success' %>
        </div>
      <% end %>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>