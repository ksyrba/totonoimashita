<div class="customer_profile">
  <h4><u>プロフィール</u></h4>
  <div class="profile_image">
    <%= image_tag customer.get_image, size: "150x150" %>
  </div>
  <table class="table table-bordered table-hover text-center mt-1">
    <tbody style="background-color: #FFFFFF">
      <tr>
        <td width="35%">名前</td>
        <td width="65%"><%= customer.name %></td>
      </tr>
      <tr>
        <td>性別</td>
        <td>
          <% if customer.sex.present? %>
            <%= customer.sex_i18n %>
          <% else %>
            <string>---</string>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>年齢</td>
        <td><%= customer.age %>歳</td>
      </tr>
      <tr>
        <td>居住地</td>
        <td><%= customer.area.name %></td>
      </tr>
      <tr>
        <td>ひと言</td>
        <td>
          <% if customer.introduction.present? %>
            <%= customer.introduction %>
          <% else %>
            <b>---</b>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
  <div class="unsubscribe_button ml-2">
    <% if (customer.is_deleted == "有効") && (customer.name != "ゲストユーザー")  %>
      <%= link_to '退会させる', unsubscribe_admin_customer_path(customer), method: :patch, "data-confirm" => "本当に退会させてもよろしいですか？", class: "btn btn-danger" %>
    <% end %>
  </div>
</div>