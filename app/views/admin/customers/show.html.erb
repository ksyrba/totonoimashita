<div class="container">
  <div class="row">
    <div class="title">
      <h3><%= @customer.name %>さんのサ活情報</h3>
    </div>
   </div>
  <div class="row">
    <div class="customer_detail col-4">
      <%= render 'admin/customers/customer_info', customer: @customer %>
    </div>
    <div class="post_index col-6 offset-1" >
      <% if @customer.post_actives.exists? %>
      <%= render 'admin/post_actives/post_index', post_actives: @post_actives %>
      <% else %>
        <h4><u>投稿一覧</u></h4>
        <p>投稿はありません</p>
      <% end %>
      <%= paginate @post_actives %>
    </div>
  </div>
</div>